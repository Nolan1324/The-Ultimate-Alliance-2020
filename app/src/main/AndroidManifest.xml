<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nolankuza.theultimatealliance">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ApplicationState"
        android:allowBackup="true"
        android:icon="@mipmap/ic_tua"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_tua_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".main.MainActivity" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".personalsettings.PersonalSettingsActivity" />
        <activity android:name=".eventimport.EventImportActivity" />
        <activity android:name=".students.StudentsActivity" />
        <activity android:name=".eventimport.EventContentImportActivity" />
        <activity android:name=".datasync.DataSyncActivity" />
        <activity android:name=".settings.SettingsActivity" />
        <activity android:name=".scout.ScoutBasicActivity" android:screenOrientation="landscape"/>
        <activity android:name=".assignment.AssignmentActivity" />
        <activity android:name=".pit.PitActivity" android:screenOrientation="landscape" />
        <activity android:name=".playoffs.PlayoffActivity" android:screenOrientation="landscape" />
    </application>

</manifest>